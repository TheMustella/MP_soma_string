#EXECUTAR AS SEGUINTES LINHAS DE CODIGO

rm -f -r build
mkdir build #CRIAR DIRETORIO PARA RECEBER ARQUIVOS DO MAKE
cd build

cmake ../  #REALIZA O MAKE DA BIBLIOTECA
make       #GERA O EXECUTAVEL
./runTests

#O EXECUTAVEL ESTARA NO DIRETORIO build
